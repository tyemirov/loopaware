# TAuth service env (integration tests)
TAUTH_CONFIG_FILE=/config/config.yml

# Server
TAUTH_LISTEN_ADDR=:8082
TAUTH_DATABASE_URL=sqlite:///data/tauth.db
TAUTH_ENABLE_CORS=true
TAUTH_CORS_ORIGIN_1=http://localhost:8090
TAUTH_CORS_ORIGIN_2=http://127.0.0.1:8090
TAUTH_CORS_EXCEPTION_1=https://accounts.google.com
TAUTH_ENABLE_TENANT_HEADER_OVERRIDE=false

# Local stacks typically run behind HTTP; for TLS-offload proxies, keep this true unless the proxy sets X-Forwarded-Proto=https.
TAUTH_ALLOW_INSECURE_HTTP=true
TAUTH_COOKIE_DOMAIN=localhost
TAUTH_SESSION_TTL=30m
TAUTH_REFRESH_TTL=720h
TAUTH_NONCE_TTL=5m

# Tenant: Pinguin
TAUTH_TENANT_ID_PINGUIN=pinguin
TAUTH_TENANT_DISPLAY_NAME_PINGUIN=Pinguin Integration
TAUTH_TENANT_ORIGIN_PINGUIN=http://localhost:8090
TAUTH_TENANT_ORIGIN_PINGUIN_ALT=http://127.0.0.1:8090
TAUTH_TENANT_GOOGLE_WEB_CLIENT_ID_PINGUIN=integration-google-client-id
TAUTH_TENANT_JWT_SIGNING_KEY_PINGUIN=integration-signing-key
TAUTH_TENANT_SESSION_COOKIE_NAME_PINGUIN=app_session_pinguin
TAUTH_TENANT_REFRESH_COOKIE_NAME_PINGUIN=app_refresh_pinguin

# Tenant: LoopAware
TAUTH_TENANT_ID_LOOPAWARE=loopaware
TAUTH_TENANT_DISPLAY_NAME_LOOPAWARE=LoopAware Integration
TAUTH_TENANT_ORIGIN_LOOPAWARE=http://localhost:8090
TAUTH_TENANT_ORIGIN_LOOPAWARE_ALT=http://127.0.0.1:8090
TAUTH_TENANT_GOOGLE_WEB_CLIENT_ID_LOOPAWARE=integration-google-client-id
TAUTH_TENANT_JWT_SIGNING_KEY_LOOPAWARE=integration-signing-key
TAUTH_TENANT_SESSION_COOKIE_NAME_LOOPAWARE=app_session_loopaware
TAUTH_TENANT_REFRESH_COOKIE_NAME_LOOPAWARE=app_refresh_loopaware

# Config-audit cross-file invariants (keep in sync with configs/.env.pinguin.integration).
TAUTH_LOOPAWARE_JWT_SIGNING_KEY=integration-signing-key
TAUTH_LOOPAWARE_GOOGLE_WEB_CLIENT_ID=integration-google-client-id
