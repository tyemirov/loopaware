# LoopAware service env (used by docker-compose.yml)
APP_ADDR=:8080
DB_DRIVER=sqlite
DB_DSN=file:/app/data/loopaware.sqlite?_foreign_keys=on

# Required secrets/config
GOOGLE_CLIENT_ID=replace-with-google-client-id.apps.googleusercontent.com
SESSION_SECRET=replace-with-32-byte-random-secret

# TAuth integration (served to the browser; points at the public origin)
TAUTH_BASE_URL=http://localhost:8082
TAUTH_TENANT_ID=loopaware
TAUTH_JWT_SIGNING_KEY=replace-with-tauth-jwt-signing-key
TAUTH_SESSION_COOKIE_NAME=app_session_loopaware

PUBLIC_BASE_URL=http://localhost:8080

# Optional: public origin for the backend API when hosting the frontend separately (GitHub Pages).
# Defaults to the frontend origin when omitted.
API_BASE_URL=http://localhost:8080

# Pinguin gRPC integration
PINGUIN_ADDR=la-pinguin:50051
PINGUIN_AUTH_TOKEN=replace-with-shared-pinguin-token
PINGUIN_TENANT_ID=loopaware-local

# Optional: overrides config.yaml admin roster
# ADMINS=admin@example.com
