# Pinguin service env (integration tests)
PINGUIN_CONFIG_PATH=/config/config.yml

# Core server
DATABASE_PATH=/app/data/pinguin.db
GRPC_AUTH_TOKEN=integration-grpc-token
LOG_LEVEL=INFO
MAX_RETRIES=3
RETRY_INTERVAL_SEC=30
MASTER_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
CONNECTION_TIMEOUT_SEC=5
OPERATION_TIMEOUT_SEC=30

# TAuth integration (served to the browser; points at the public origin)
TAUTH_SIGNING_KEY=integration-signing-key
TAUTH_COOKIE_NAME=app_session_pinguin
TAUTH_GOOGLE_CLIENT_ID=integration-google-client-id
TAUTH_BASE_URL=http://la-tauth:8082
TAUTH_TENANT_ID=pinguin

# LoopAware tenant config inside Pinguin (notifications/identity/email settings)
LOOPAWARE_LOCAL_DOMAIN_PRIMARY=localhost
LOOPAWARE_LOCAL_DOMAIN_SECONDARY=127.0.0.1
LOOPAWARE_LOCAL_ADMIN_EMAIL_1=admin@example.com
LOOPAWARE_LOCAL_ADMIN_EMAIL_2=owner@example.com
LOOPAWARE_LOCAL_GOOGLE_CLIENT_ID=integration-google-client-id
LOOPAWARE_LOCAL_TAUTH_BASE_URL=http://la-tauth:8082
LOOPAWARE_LOCAL_SMTP_HOST=smtp.example.com
LOOPAWARE_LOCAL_SMTP_PORT=587
LOOPAWARE_LOCAL_SMTP_USERNAME=loopaware@example.com
LOOPAWARE_LOCAL_SMTP_PASSWORD=integration-smtp-password
LOOPAWARE_LOCAL_FROM_EMAIL=loopaware@example.com
LOOPAWARE_TWILIO_ACCOUNT_SID=
LOOPAWARE_TWILIO_AUTH_TOKEN=
LOOPAWARE_TWILIO_FROM_NUMBER=

# Pinguin web UI + CORS
HTTP_LISTEN_ADDR=:8081
HTTP_ALLOWED_ORIGIN1=http://localhost:8090
HTTP_ALLOWED_ORIGIN2=http://127.0.0.1:8090
HTTP_ALLOWED_ORIGIN3=https://accounts.google.com
