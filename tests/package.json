{
  "name": "loopaware-integration-tests",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test -c playwright.ui.config.js",
    "test:headed": "playwright test -c playwright.ui.config.js --headed",
    "test:ui": "playwright test -c playwright.ui.config.js --ui",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "install:browsers": "playwright install --with-deps",
    "test:api": "playwright test -c playwright.api.config.js",
    "test:all": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.5",
    "jsonwebtoken": "^9.0.2",
    "pngjs": "^7.0.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  }
}
