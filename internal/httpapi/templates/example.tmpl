<!doctype html>
<html lang="en" data-theme="light">
<head>
  <meta charset="utf-8">
  <title>{{ .PageTitle }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>{{ .SharedStyles }}</style>
  <script>{{ .ThemeScript }}</script>
</head>
<body class="d-flex flex-column min-vh-100 bg-body text-body">
  <main class="container py-5">
    <h1 class="display-6 mb-3">{{ .Heading }}</h1>
    <p class="text-body-secondary mb-4">{{ .Description }}</p>
    {{ if .DemoMode }}
    <div class="alert alert-info" role="status">
      The widget below runs in demo mode: the bubble sits on the left, the header reads "Example widget", and submitting the form does not send network requests.
    </div>
    {{ end }}
    <form class="row gy-3" method="get" action="{{ .FormAction }}">
      <div class="col-12 col-md-8">
        <label class="form-label" for="example-site-id">{{ .SiteIDLabel }}</label>
        <input
          id="example-site-id"
          name="{{ .SiteIDQueryParameter }}"
          value="{{ .SiteIDValue }}"
          placeholder="{{ .SiteIDPlaceholder }}"
          required
          class="form-control form-control-lg"
          autocomplete="off"
          spellcheck="false"
          autocapitalize="none">
      </div>
      <div class="col-12 col-md-4 align-self-end">
        <button type="submit" class="btn btn-primary btn-lg w-100">{{ .SubmitLabel }}</button>
      </div>
    </form>
    {{ if .HasSiteID }}
    <section class="mt-5">
      <h2 class="h4">{{ .PreviewHeading }}</h2>
      <p class="text-body-secondary mb-3">{{ .PreviewDescription }}</p>
      <div class="alert alert-secondary" role="status">
        <strong>Previewing site:</strong>
        {{ if .SiteName }}{{ .SiteName }}{{ else }}Site {{ .SiteIDValue }}{{ end }}
        <span class="d-block small text-body-secondary">Site ID: <code>{{ .SiteIDValue }}</code></span>
        {{ if .DemoMode }}<span class="d-block small text-body-secondary">Demo mode disables network requests.</span>{{ end }}
      </div>
      <pre class="bg-body-secondary border rounded p-3"><code>&lt;script defer src="{{ .WidgetScriptURL }}"&gt;&lt;/script&gt;</code></pre>
    </section>
    {{ if .DemoMode }}<script>window.LOOPAWARE_WIDGET_DEMO_MODE = true;</script>{{ end }}
    <script defer src="{{ .WidgetScriptURL }}"></script>
    {{ else }}
    <p class="mt-5 text-body-secondary">{{ .EmptyStateMessage }}</p>
    {{ end }}
  </main>
</body>
</html>
