{{define "dashboard_header"}}
<mpr-header class="dashboard-header" google-site-id="{{.HeaderGoogleClientID}}"{{if .HeaderTauthBaseURL}} tauth-url="{{.HeaderTauthBaseURL}}"{{end}} tauth-tenant-id="{{.HeaderTauthTenantID}}" tauth-login-path="{{.HeaderTauthLoginPath}}" tauth-logout-path="{{.HeaderTauthLogoutPath}}" tauth-nonce-path="{{.HeaderTauthNoncePath}}" sign-in-label="{{.HeaderSignInLabel}}" sign-out-label="{{.HeaderSignOutLabel}}" data-loopaware-auth-redirect-on-logout="true" data-loopaware-authenticated="true">
  <span slot="brand" class="d-inline-flex align-items-center gap-3">
    <img id="{{.HeaderLogoImageID}}" src="{{.HeaderLogoDataURI}}" alt="LoopAware logo" width="44" height="44" />
    <span class="fw-semibold">{{.PageTitle}}</span>
  </span>
  <div slot="aux" class="loopaware-profile-dropdown dropdown" data-loopaware-profile-menu="true">
    <button type="button" class="loopaware-profile-toggle dropdown-toggle" data-loopaware-profile-toggle="true" data-bs-toggle="dropdown" aria-expanded="false">
      <img class="loopaware-header-avatar d-none" data-loopaware-avatar="true" alt="User avatar" />
      <span class="loopaware-profile-name" data-loopaware-profile-name="true"></span>
    </button>
    <div class="dropdown-menu dropdown-menu-end loopaware-profile-menu" data-loopaware-profile-menu-items="true">
      <button id="{{.SettingsButtonID}}" type="button" class="dropdown-item loopaware-profile-item" data-loopaware-settings="true" data-bs-toggle="modal" data-bs-target="#{{.SettingsModalID}}">{{.SettingsButtonLabel}}</button>
      <button type="button" class="dropdown-item loopaware-profile-item" data-loopaware-logout="true">{{.HeaderSignOutLabel}}</button>
    </div>
  </div>
</mpr-header>
{{end}}
