<!doctype html>
<html lang="en" data-theme="light">
<head>
  <meta charset="utf-8">
  <title>{{.PageTitle}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-NZ1ql+vZWX0rZg7B1LjXLp8dkUBaRdOy+nK8BPVKxH/efxWWEXUOYaL6VLfJfXQ0" crossorigin="anonymous">
  <style>{{.SharedStyles}}</style>
</head>
<body data-bs-theme="light" class="min-vh-100 d-flex flex-column" style="background-color:#808080;">
  {{.HeaderHTML}}
  <main class="flex-fill py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card shadow-sm border-0">
            <div class="card-body">
              <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
                <div>
                  <h1 class="h4 mb-1">Widget Test â€” {{.SiteName}}</h1>
                  <p class="text-muted mb-0">Bubble side <strong>{{.PlacementSideLabel}}</strong>, bottom offset <strong>{{.PlacementOffset}}px</strong>.</p>
                  <p class="text-muted small mt-2 mb-0">Site ID: <code>{{.SiteID}}</code></p>
                </div>
                <span class="badge text-bg-secondary">Preview only</span>
              </div>
              <hr class="my-4" />
              <p class="text-muted mb-0">Use the theme switch in the navigation bar to verify light and dark modes. Interactions with this widget are stored with the selected site.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <script>{{.ThemeScript}}</script>
  <script>
    (function(){
      var root = document.documentElement;
      var body = document.body;
      var toggle = document.getElementById('public-theme-toggle');
      function currentTheme() {
        if (!body) {
          return 'light';
        }
        return body.getAttribute('data-bs-theme') === 'dark' ? 'dark' : 'light';
      }
      function applyTheme(theme) {
        var normalized = theme === 'dark' ? 'dark' : 'light';
        if (root) {
          root.setAttribute('data-theme', normalized);
        }
        if (body) {
          if (normalized === 'dark') {
            body.classList.add('text-light');
          } else {
            body.classList.remove('text-light');
          }
        }
      }
      function syncTheme() {
        applyTheme(currentTheme());
      }
      if (toggle) {
        toggle.addEventListener('change', syncTheme);
      }
      syncTheme();
    }());
  </script>
  <script>
    window.LOOPAWARE_WIDGET_TEST_MODE = true;
    window.LOOPAWARE_WIDGET_TEST_ENDPOINT = "{{.TestFeedbackEndpoint}}";
  </script>
  <script defer src="{{.WidgetScriptURL}}"></script>
</body>
</html>
